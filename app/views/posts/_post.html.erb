<h1><%= post.title %></h1>
<%= image_tag post.image.url(:medium), class: 'instagram-upload' %>
<br>
<% post.tags.each do |tag| %>
  <%= link_to tag, tag_posts_path(tag) %>
<% end %>
<br>
<br>
<%= button_to 'Add comment', new_post_comment_path(post), method: :get %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Delete', post_path(post), method: :delete %>
<%= number_to_currency(post.price) %>
<%= button_to 'Buy now!', new_post_charge_path(post), method: :get %>
<br>
<% post.comments.each do |comment| %>
  <p><%= comment.text %></p>
<% end %>
