<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post, html: {multipart: true} do |f| %>
  <p>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>

    <%= f.label :price, 'Price' %>
    <%= f.text_field :price %>

    <%= f.label :tag_names, 'Tags' %>
    <%= f.text_field :tag_names, id: "tag-input" %>

    <%= f.label :image, 'Image' %>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
